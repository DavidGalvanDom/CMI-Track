@model CMI.Track.Web.Models.Usuario

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Actualizar Usuario</h4>
        </div>
        <div class="modal-body">
            <div class="clientAlertDlg"> </div>
            @using (Html.BeginForm("Actualiza", "Usuario", FormMethod.Post, new { id = "ActualizaUsuarioForm", name = "ActualizaUsuarioForm", @class = "form-horizontal" }))
            {

            <div class="form-group">
                <label class="col-sm-3 control-label">Id</label>
                <div class="col-sm-8">
                    <p class="form-control-static">@Html.DisplayFor(model => model.id)</p>                   
                </div>
                <div class="col-sm-1">
                    @Html.HiddenFor(model => model.id)
                </div>
            </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NombreUsuario, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.NombreUsuario, new { @class = "form-control", maxlength = 20 })
                    </div>
                    <div class="col-sm-1">
                        @Html.ValidationMessageFor(model => model.NombreUsuario, null, new { @class = "help-inline" })
                    </div>                 
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Nombre, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", maxlength = 50 })
                    </div>
                    <div class="col-sm-1">
                        @Html.ValidationMessageFor(model => model.Nombre, null, new { @class = "help-inline" })
                    </div>                           
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.ApePaterno, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.ApePaterno, new { @class = "form-control", maxlength = 50 })
                    </div>
                    <div class="col-sm-1">
                        @Html.ValidationMessageFor(model => model.ApePaterno, null, new { @class = "help-inline" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ApeMaterno, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.ApeMaterno, new { @class = "form-control", maxlength = 50 })
                    </div>
                    <div class="col-sm-1">
                        @Html.ValidationMessageFor(model => model.ApeMaterno, null, new { @class = "help-inline" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Estatus, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-8">
                        @Html.DropDownListFor(model => model.Estatus,
                                                                    new SelectList(new[]{
                                                                                  new SelectListItem{ Text="ACTIVO", Value="ACT"},
                                                                                  new SelectListItem{ Text="INACTIVO", Value="INA"}},
                                                           "Value", "Text"), new { @class = "form-control" })
                    </div>
                    <div class="col-sm-1">
                        @Html.ValidationMessageFor(model => model.Estatus, null, new { @class = "help-inline" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Correo, new { @class = "col-sm-3 control-label" })
                    <div class="controls col-sm-8">
                        <div class="input-group">
                            <span class="input-group-addon">&#64;</span>
                            @Html.TextBoxFor(model => model.Correo, new { maxlength = 100, @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-sm-1">
                        @Html.ValidationMessageFor(model => model.Correo, null, new { @class = "help-inline" })
                    </div>
                </div>

            @Html.HiddenFor(model => model.Estatus);
            @Html.HiddenFor(model => model.Contrasena);
            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default " data-dismiss="modal">Cancelar</button>
            <button type="button" class="btn btn-primary btn-ActualizarUsuario">Guardar</button>
        </div>
    </div>
</div>
