@model CMI.Track.Web.Models.OrdenEmbarque 

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">@ViewBag.Titulo  Orden Embarque</h4>
        </div>
        <div class="modal-body">
            <div class="clientAlertDlg"></div>
            @using (Html.BeginForm("Nuevo", "OrdenEmbarque", FormMethod.Post, new { id = "NuevoOrdenEmbarqueForm", name = "NuevoOrdenEmbarqueForm", @class = "form-horizontal" }))
            {
 
                <div class="form-group">
                    <div class="col-sm-2"> <label class="control-label">Estatus OE</label></div>
                    <div class="col-sm-5">
                        @Html.DropDownListFor(model => model.EstatusOE,
                                                                                                        new SelectList(new[]{
                                                                                                                        new SelectListItem{ Text="ABIERTO", Value="1"},
                                                                                                                        new SelectListItem{ Text="CERRADO", Value="0"}},
                                                                                                "Value", "Text"), new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2"> <label class="control-label">Observaciones</label></div>
                    <div class="col-sm-10">
                        @Html.TextAreaFor(model => model.Obervaciones, new
                                {
                                    @class = "form-control",
                                    maxlength = 250,
                                    onkeypress = "return ( this.value.length < 250 );",
                                    rows = "4"
                                })
                    </div>
                  
                </div>
                <div class="form-group">
             
                        <div class="col-sm-2"> <label class="control-label">Marca</label></div>
                        <div class="col-sm-6">
                            <span id="idMar" style="display:none;">Id</span>
                            <div class="input-group">
                                <input type="text" id="idMarcaSelect" name="idMarcaSelect" class="form-control" placeholder="Marca" title="Marca">
                                <span class="input-group-btn">
                                    <button class="btn btn-secondary" type="button" id="btnBuscarMarca" name="btnBuscarMar"><span class="fa fa-search"></span></button>
                                </span>
                            </div>
                            @Html.HiddenFor(model => model.idMarca)
                        </div>
                </div>
                <div class="form-group">

                    <div class="col-lg-12">
                        <button type="button" class="btn btn-primary btn-AgregarMarca">Agregar</button>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <br />
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div id="bbGrid-MarcasAgregar" class="col-lg-12">
                            <div id="cargandoInfo" style="display:none;">Cargando informacion...</div>
                        </div>
                    </div>
                </div>



        @Html.HiddenFor(model => model.id)
        @Html.HiddenFor(model => model.usuarioCreacion)
         @Html.HiddenFor(model => model.idEtapa)
    @Html.HiddenFor(model => model.Revision)
    @Html.HiddenFor(model => model.idProyecto)
            }
    </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary btn-GuardaNuevo">Cerrar</button>
        </div>
    </div><!-- /.modal-content -->
</div>
