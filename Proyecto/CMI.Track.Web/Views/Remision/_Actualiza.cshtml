@model CMI.Track.Web.Models.Remision

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Actualizar   Remision</h4>
        </div>
        <div class="modal-body">
            <div class="clientAlertDlg"></div>
            @using (Html.BeginForm("Actulizar", "Remision", FormMethod.Post, new { id = "ActualizarRemisionForm", name = "ActualizarRemisionForm", @class = "form-horizontal", onsubmit = "return false" }))
            {

                <div class="form-group">
                    @Html.LabelFor(model => model.fechaEnvio, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-3">
                        <div class='input-group date' id='dtpFechaEnvio'>
                            @Html.TextBoxFor(model => model.fechaEnvio, new { @class = "form-control", maxlength = 10 })
                            <span class="input-group-addon">
                                <span class="fa fa-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-2">

                    </div>
                    @Html.LabelFor(model => model.fechaRemision, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-3">
                        <div class="input-group date">
                            <p class="form-control" disabled>@Html.DisplayFor(model => model.fechaRemision)</p>
                            @Html.HiddenFor(model => model.fechaRemision)
                            <span class="input-group-addon">
                                <span class="fa fa-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label" for="nombreCliente">Cliente</label>
                    <div class="col-sm-5">
                        <div class="input-group">
                            <p id="nombreCliente" name="nombreCliente" class="form-control" placeholder="Nombre cliente">
                            @Model.nombreCliente
                            </p>
                            <span class="input-group-btn">
                                <button class="btn btn-secondary" type="button" id="btnBuscarCliente" name="btnBuscarCliente"><span class="fa fa-search"></span></button>
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-2"></div>
                    <div class="col-sm-1">
                        <span class="fa fa-user fa-3x"></span>
                    </div>
                    <div class="col-sm-2"></div>

                </div>
                <div class="form-group">
                    <div class="col-sm-2">

                    </div>
                    <div class="col-sm-5">
                        <span id="contacto" placeholder="Contacto" class="form-control">@Model.nombreContacto</span>
                    </div>
                    <div class="col-sm-5">
                        <span id="direccion" placeholder="Direccion" class="form-control">@Model.direccionCliente</span>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.transporte, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-5">
                        @Html.TextBoxFor(model => model.transporte, new { @class = "form-control", maxlength = 100 })
                    </div>

                    @Html.LabelFor(model => model.placas, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.placas, new { @class = "form-control", maxlength = 20 })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.conductor, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-5">
                        @Html.TextBoxFor(model => model.conductor, new { @class = "form-control", maxlength = 150 })
                    </div>
                </div>

                <div class="form-group" id="ordenEmbarqueRow">
                    <div class="col-sm-2">
                        <label class="control-label">Orden Embarque</label>
                    </div>
                    <div class="col-sm-5">
                        <div class="input-group">
                            <p id="idOrdenEmbarque" name="idOrdenEmbarque" class="form-control" title="Id Orden Embarque"> Id Orden Embarque </p>
                            <span class="input-group-btn">
                                <button class="btn btn-secondary" type="button" id="btnBuscarOrdenEmbarque" name="btnBuscarOrdenEmbarque" onclick="Remision.onBuscarOrdenEmbarque();"><span class="fa fa-search"></span></button>
                            </span>
                        </div>
                        <input type="hidden" id="idOrdenEmbarSelect" name="idOrdenEmbarSelect" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div id="bbGrid-OrdenEmbarA" class="col-lg-12">
                            <div id="cargandoInfoOE" style="display:none;">Cargando informacion...</div>
                        </div>
                    </div>
                </div>

                @Html.HiddenFor(model => model.id)
                @Html.HiddenFor(model => model.idCliente)
                @Html.HiddenFor(model => model.usuarioCreacion)
                @Html.HiddenFor(model => model.idProyecto)
                @Html.HiddenFor(model => model.idEtapa)}
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            <button type="button" class="btn btn-primary btn-Actualizar">Actualizar</button>
        </div>
    </div><!-- /.modal-content -->
</div>

