@model CMI.Track.Web.Models.RutaFabricacion

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Actualizar Ruta de Fabricacion</h4>
        </div>
        <div class="modal-body">
            <div class="clientAlertDlg"> </div>
            @using (Html.BeginForm("Actualiza", "RutaFabricacion", FormMethod.Post, new { id = "ActualizaRutaFabricacionForm", name = "ActualizaRutaFabricacionForm", @class = "form-horizontal" }))
            {

                <div class="form-group">
                    <label class="col-sm-2 control-label">Id</label>
                    <div class="col-sm-8">
                        <p class="form-control">@Html.DisplayFor(model => model.id)</p>
                    </div>
                    <div class="col-sm-1">
                        @Html.HiddenFor(model => model.id)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.idCategoria, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-8">
                        <select id="idCategoria" name="idCategoria" class="form-control" required="required"></select>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.secuencia, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.secuencia, new { @class = "form-control", maxlength = 20 })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.idProceso, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-8">
                        <select id="idProceso" name="idProceso" class="form-control" required="required"></select>
                    </div>
                </div>
                
                <div class="form-group">                   
                    @Html.LabelFor(model => model.idEstatus, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-8">
                        @Html.DropDownListFor(model => model.idEstatus,
                                                                    new SelectList(new[]{
                                                                                  new SelectListItem{ Text="ACTIVO", Value="1"},
                                                                                  new SelectListItem{ Text="INACTIVO", Value="0"}},
                                                        "Value", "Text"), new { @class = "form-control", required = "required" })
                    </div>                   
                </div>
                <input type="hidden" id="categoria" name="categoria" value="@Model.idCategoria" />
                <input type="hidden" id="proceso" name="proceso" value="@Model.idProceso" />
            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default " data-dismiss="modal">Cancelar</button>
            <button type="button" class="btn btn-primary btn-ActualizarRutaFabricacion">Actualizar</button>
        </div>
    </div>
</div>
