@model CMI.Track.Web.Models.Departamento

<div class="modal-dialog " role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Actualizar  Departamento</h4>
        </div>
        <div class="modal-body">
            <div class="clientAlertDlg"></div>
            @using (Html.BeginForm("Actualiza", "Departamento", FormMethod.Post, new { id = "ActualizaDepartamentoForm", name = "ActualizaDepartamentoForm", @class = "form-horizontal" }))
            {
                <div class="form-group">
                    <label class="col-sm-2 control-label">Id</label>
                    <div class="col-sm-4">
                        <p class="form-control">@Html.DisplayFor(model => model.id)</p>
                    </div>
                    <label class="col-sm-2 control-label">Fecha</label>
                    <div class="col-sm-4">
                        <p class="form-control">@Html.DisplayFor(model => model.fechaCreacion)</p>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Nombre, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", maxlength = 50 })
                    </div>
                </div>

                <div class="form-group">

                    @Html.LabelFor(model => model.idEstatus, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.DropDownListFor(model => model.idEstatus,
                                                                            new SelectList(new[]{
                                                                                            new SelectListItem{ Text="ACTIVO", Value="1"},
                                                                                            new SelectListItem{ Text="INACTIVO", Value="0"}},
                                                                "Value", "Text"), new { @class = "form-control", required = "required" })
                    </div>
                </div>

                @Html.HiddenFor(model => model.id)
                @Html.HiddenFor(model => model.fechaCreacion)
                @Html.HiddenFor(model => model.usuarioCreacion)

            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            <button type="button" class="btn btn-primary btn-ActualizarDepartamento">Guardar</button>
        </div>
    </div><!-- /.modal-content -->
</div>
