@model CMI.Track.Web.Models.Marca

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Actualizar Marca</h4>
        </div>
        <div class="modal-body">
            <div class="clientAlertDlg"></div>
            @using (Html.BeginForm("Actualiza", "Marcas", FormMethod.Post, new { id = "ActualizaMarcaForm", name = "ActualizaMarcaForm", @class = "form-horizontal" }))
            {
                <div class="form-group">
                    <label class="col-sm-2 control-label">Id</label>
                    <div class="col-sm-2">
                        <p class="form-control">@Html.DisplayFor(model => model.id)</p>
                    </div>
                    <div class="col-sm-8">  </div>
                   
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.nombreMarca, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-5">
                        @Html.TextBoxFor(model => model.nombreMarca, new { @class = "form-control", maxlength = 50 })
                    </div>
                    @Html.LabelFor(model => model.codigoMarca, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.codigoMarca, new { @class = "form-control", maxlength = 20 })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.piezas, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-2">
                        @Html.TextBoxFor(model => model.piezas, new { @class = "form-control", maxlength = 15 })
                    </div>
                    <div class="col-sm-3"></div>
                    @Html.LabelFor(model => model.pesoMarca, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-2">
                        @Html.TextBoxFor(model => model.pesoMarca, new { @class = "form-control", maxlength = 15 })
                    </div>
                    <div class="col-sm-1"></div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.idEstatus, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-3">
                        @Html.DropDownListFor(model => model.idEstatus,
                                                                    new SelectList(new[]{
                                                                                  new SelectListItem{ Text="ACTIVO", Value="1"},
                                                                                  new SelectListItem{ Text="INACTIVO", Value="0"}},
                                                        "Value", "Text"), new { @class = "form-control", required = "required" })
                    </div>
                    <div class="col-sm-2"></div>
                    @Html.LabelFor(model => model.fechaCreacion, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-3">
                        <div class='input-group date'>
                            @Html.TextBoxFor(model => model.fechaCreacion, new { @class = "form-control", maxlength = 10, @disabled = "disabled" })
                            <span class="input-group-addon">
                                <span class="fa fa-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>
                
                @Html.HiddenFor(model => model.id)
                @Html.HiddenFor(model => model.idPlanoDespiece)
                @Html.HiddenFor(model => model.usuarioCreacion)
            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            <button type="button" class="btn btn-primary btn-ActualizarMarca">Actualizar</button>
        </div>
    </div><!-- /.modal-content -->
</div>
