@model CMI.Track.Web.Models.UnidadMedida

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Actualizar Unidad de Medida</h4>
        </div>
        <div class="modal-body">
            <div class="clientAlertDlg"> </div>
            @using (Html.BeginForm("Actualiza", "UnidadMedida", FormMethod.Post, new { id = "ActualizaUnidadMedidaForm", name = "ActualizaUnidadMedidaForm", @class = "form-horizontal" }))
            {

                <div class="form-group">
                    <label class="col-sm-3 control-label">Id</label>
                    <div class="col-sm-8">
                        <p class="form-control">@Html.DisplayFor(model => model.id)</p>
                    </div>
                    <div class="col-sm-1">
                        @Html.HiddenFor(model => model.id)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.nombreCortoUnidadMedida, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.nombreCortoUnidadMedida, new { @class = "form-control", maxlength = 20 })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.nombreUnidadMedida, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.nombreUnidadMedida, new { @class = "form-control", maxlength = 50 })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.idEstatus, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-8">
                        @Html.DropDownListFor(model => model.idEstatus,
                                                                    new SelectList(new[]{
                                                                                  new SelectListItem{ Text="ACTIVO", Value="1"},
                                                                                  new SelectListItem{ Text="INACTIVO", Value="0"}},
                                                           "Value", "Text"), new { @class = "form-control" })
                    </div>
                </div>
            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default " data-dismiss="modal">Cancelar</button>
            <button type="button" class="btn btn-primary btn-ActualizarUnidadMedida">Guardar</button>
        </div>
    </div>
</div>
