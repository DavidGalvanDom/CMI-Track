@model CMI.Track.Web.Models.RegistroCalidad

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">@ViewBag.Titulo Registro de Calidad</h4>
        </div>
        <div class="modal-body">
            <div class="clientAlertDlg"></div>
            @using (Html.BeginForm("Nuevo", "RegistroCalidad", FormMethod.Post, new { id = "NuevoRegistroCalidadForm", name = "NuevoRegistroCalidadForm", @class = "form-horizontal", onsubmit = "return false" }))
            {

                <div class="form-group">
                    @Html.LabelFor(model => model.idEstatus, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.DropDownListFor(model => model.idEstatus,
                                                                                new SelectList(new[]{
                                                                                                new SelectListItem{ Text="LIBERADO", Value="20"},
                                                                                                new SelectListItem{ Text="RECHAZADO", Value="21"}},
                                                                        "Value", "Text"), new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.bLongitud, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-1">
                        @Html.CheckBoxFor(model => model.bLongitud, new { @class = "form-control" })
                    </div>
                    <div class="col-sm-1"> </div>
                    @Html.LabelFor(model => model.bBarrenacion, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-1">
                        @Html.CheckBoxFor(model => model.bBarrenacion, new { @class = "form-control" })
                    </div>
                    <div class="col-sm-1"> </div>
                    @Html.LabelFor(model => model.bPlaca, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-1">
                        @Html.CheckBoxFor(model => model.bPlaca, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2"> </div>
                    @Html.LabelFor(model => model.bSoldadura, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-1">
                        @Html.CheckBoxFor(model => model.bSoldadura, new { @class = "form-control" })
                    </div>
                    <div class="col-sm-1"> </div>
                    @Html.LabelFor(model => model.bPintura, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-1">
                        @Html.CheckBoxFor(model => model.bPintura, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.observacionesRegistroCalidad, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextAreaFor(model => model.observacionesRegistroCalidad, new
                    {
                        @class = "form-control",
                        maxlength = 250,
                        onkeypress = "return ( this.value.length < 250 );",
                        rows = "4"
                    })
                    </div>
                </div>
                
                @Html.HiddenFor(model => model.claseRegistro)
                @Html.HiddenFor(model => model.idMarca_Submarca)
                @Html.HiddenFor(model => model.idSerie)
                @Html.HiddenFor(model => model.idUsuario)
            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            <button type="button" class="btn btn-primary" id="btnDarRegistroCalidad">Registrar</button>
        </div>
    </div><!-- /.modal-content -->
</div>
