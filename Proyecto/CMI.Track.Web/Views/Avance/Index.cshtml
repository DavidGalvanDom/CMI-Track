
@{
    ViewBag.Title = "Avance/Registro de Calidad";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Avance/Registro de Calidad
        </h1>
    </div>
</div>

<div id="divProyecto">
    <div id="proyectoRow" class="row">
        <div class="form-group">
            <div class="col-sm-1"> <label class="control-label">Proyecto</label></div>
            <div class="col-sm-4">
                <div class="input-group">
                    <p id="nombreProyecto" name="nombreProyecto" class="form-control" placeholder="Nombre Proyecto" title="Nombre Proyecto"> Nombre Proyecto </p>
                    <span class="input-group-btn">
                        <button class="btn btn-secondary" type="button" id="btnBuscarProyecto" name="btnBuscarProyecto"><span class="fa fa-search"></span></button>
                    </span>
                </div>
                <input type="hidden" id="idProyectoSelect" name="idProyectoSelect" />
            </div>
            <div class="col-sm-2">
                <span id="FechaInicio" placeholder="FechaInicio" class="form-control" title="Fecha Inicio">Fecha Inicio</span>
            </div>
            <div class="col-sm-2">
                <span id="FechaFin" placeholder="FechaFin" class="form-control" title="Fecha Fin">Fecha Fin</span>
            </div>
            <div class="col-sm-1">
                <span id="RevisionPro" name="RevisionPro" class="form-control" title="Revision">Rev</span>
            </div>
            <div class="col-sm-2">
                <span id="CodigoProyecto" placeholder="CodigoProyecto" class="form-control" title="Codigo Proyecto">Codigo Proyecto</span>
            </div>
        </div>
    </div>
    <div class="row"><div class="col-sm-12"><br /></div></div>
    <div class="row" id="etapaRow" style="display:none;">
        <div class="form-group">
            <div class="col-sm-1"> <label class="control-label">Etapa</label></div>
            <div class="col-sm-4">
                <div class="input-group">
                    <p id="nombreEtapa" name="nombreEtapa" class="form-control" title="Nombre Etapa"> Nombre Etapa </p>
                    <span class="input-group-btn">
                        <button class="btn btn-secondary" type="button" id="btnBuscarEtapa" name="btnBuscarEtapa"><span class="fa fa-search"></span></button>
                    </span>
                </div>
                <input type="hidden" id="idEtapaSelect" name="idEtapaSelect" />
            </div>
            <div class="col-sm-2">
                <span id="FechaInicioEtapa" class="form-control" title="Fecha Inicio">Fecha Inicio</span>
            </div>
            <div class="col-sm-2">
                <span id="FechaFinEtapa" class="form-control" title="Fecha Fin">Fecha Fin</span>
            </div>
            <div class="col-sm-3">
                <button class="btn pull-right" id="btnResumenON" style="display:none;">- Info...</button>
            </div>
        </div>
    </div>
</div>
<div id="divResumen" class="row" style="display:none;" user-data-collapsed="OFF">
    <div class="form-group">
        <div class="col-sm-1"> <label class="control-label">Proyecto</label></div>
        <div class="col-sm-5">
            <div class="input-group">
                <span id="proyectoResumen" name="proyectoResumen" class="form-control" title="Proyecto"></span>
            </div>
        </div>
        <div class="col-sm-1"> <label class="control-label">Etapa</label></div>
        <div class="col-sm-4">
            <div class="input-group">
                <p id="etapaResumen" name="etapaResumen" class="form-control" title="Etapa"></p>
            </div>
        </div>
        <div class="col-sm-1">
            <button class="btn pull-right" id="btnResumenOFF">+ Info...</button>
        </div>
    </div>
</div>
<div class="row"><div class="col-sm-12"><br /></div></div>
<div class="row" id="procesoRow" style="display:none;">
    <div class="form-group">
        <div class="col-sm-1"> <label class="control-label">P. Act.</label></div>
        <div class="col-sm-2" data-colsize="1">
            <div class="input-group">
                <select class="form-control" id="selectProcesoActual" name="selectProcesoActual"></select>
                <input type="hidden" id="idTipoProceso" value="" />
            </div>
        </div>
        <div class="col-sm-1 text-right"> <label class="control-label">P. Sig.</label></div>
        <div class="col-sm-2" data-colsize="1">
            <div class="input-group">
                <select class="form-control" id="selectProcesoSiguiente" name="selectProcesoSiguiente"></select>
            </div>
        </div>
        <div id="usuarioFabricoDiv">
            <div class="col-sm-1 text-right"> <label class="control-label" style="font-size:small">Fabrico</label></div>
            <div class="col-sm-2">
                <div class="input-group">
                    <select class="form-control select2" id="selectUsuarioFabrico" name="selectUsuarioFabrico"></select>
                </div>
            </div>
        </div>
        <div class="col-sm-1 text-right"> <label class="control-label" style="font-size:small">C. Barras</label></div>
        <div class="col-sm-2" data-colsize="1">
            <div class="input-group">
                <input type="text" id="codigoBarras" name="codigoBarras" class="form-control" title="Codigo de Barras" placeholder="Codigo de Barras" />
                <span class="input-group-btn">
                    <button class="btn btn-secondary" type="button" id="btnBuscarCodigoBarra" name="btnBuscarCodigoBarra"><span class="fa fa-barcode"></span></button>
                </span>
            </div>
        </div>
    </div>
</div>
<div class="row"><div class="col-sm-12"><br /></div></div>
<div id="divGrid" class="row">
    <div class="col-lg-12">
        <div id="bbGrid-Avance" class="col-lg-12">
            <div id="cargandoInfo" style="display:none;">Cargando informacion...</div>
        </div>
    </div>
</div>
<div class="row"><div class="col-sm-12"><br /></div></div>

<div class="modal fade bs-example-modal-lg" id="buscar-General" tabindex="-1" role="dialog" aria-labelledby="buscarGeneral"></div>

@section Scripts {
    <script src="~/Scripts/Avance.js"></script>
}