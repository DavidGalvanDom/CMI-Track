@model CMI.Track.Web.Models.PlanosDespiece

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Actualizar Plano Despiece</h4>
        </div>
        <div class="modal-body">
            <div class="clientAlertDlg"></div>
            @using (Html.BeginForm("Actualiza", "PlanosDespiece", FormMethod.Post, new { id = "ActualizaPlanosDespieceForm", name = "ActualizaPlanosDespieceForm", @class = "form-horizontal" }))
            {
                <div class="form-group">
                    <label class="col-sm-2 control-label">Id</label>
                    <div class="col-sm-2">
                        <p class="form-control">@Html.DisplayFor(model => model.id)</p>
                    </div>
                    <div class="col-sm-3">  </div>
                    @Html.LabelFor(model => model.fechaCreacion, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-3">
                        <div class='input-group date'>
                            @Html.TextBoxFor(model => model.fechaCreacion, new { @class = "form-control", maxlength = 10 })
                            <span class="input-group-addon">
                                <span class="fa fa-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.nombrePlanoDespiece, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-5">
                        @Html.TextBoxFor(model => model.nombrePlanoDespiece, new { @class = "form-control", maxlength = 20 })
                    </div>
                    @Html.LabelFor(model => model.codigoPlanoDespiece, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.codigoPlanoDespiece, new { @class = "form-control", maxlength = 20 })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.idEstatus, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-3">
                        @Html.DropDownListFor(model => model.idEstatus,
                                                                    new SelectList(new[]{
                                                                                  new SelectListItem{ Text="ACTIVO", Value="1"},
                                                                                  new SelectListItem{ Text="INACTIVO", Value="0"}},
                                                        "Value", "Text"), new { @class = "form-control", required = "required" })
                    </div>
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.idTipoConstruccion, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        <select class="form-control select2" id="idTipoConstruccion" name="idTipoConstruccion" required="required"></select>
                    </div>
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.infGeneralPlanoDespiece, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextAreaFor(model => model.infGeneralPlanoDespiece, new
                           {
                               @class = "form-control",
                               maxlength = 250,
                               onkeypress = "return ( this.value.length < 250 );",
                               rows = "4"
                           })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Plano</label>
                    <div class="col-sm-10">
                        <div class="input-group">
                            <span class="input-group-btn">
                                <span class="btn btn-primary btn-file">
                                    Archivo&hellip; <input type="file" id="fPlanoAct" name="fPlanoAct">
                                </span>
                            </span>
                            <input type="text" class="form-control" readonly value="@Model.nombreArchivo">
                        </div>
                    </div>
                </div>

                @Html.HiddenFor(model => model.id)
                @Html.HiddenFor(model => model.idPlanoMontaje)
                @Html.HiddenFor(model => model.usuarioCreacion)
                @Html.HiddenFor(model => model.archivoPlanoDespiece)
                <input type="hidden" id="tipoConstruccion" name="tipoConstruccion" value="@Model.idTipoConstruccion" />
            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            <button type="button" class="btn btn-primary btn-ActualizarPlanosDespiece">Actualizar</button>
        </div>
    </div><!-- /.modal-content -->
</div>
