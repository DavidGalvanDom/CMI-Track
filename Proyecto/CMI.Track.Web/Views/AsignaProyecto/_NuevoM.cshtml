@model CMI.Track.Web.Models.AsignaProyecto

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Asignar Materiales</h4>
        </div>
        <div class="modal-body">
            <div class="clientAlertDlg"></div>
            @using (Html.BeginForm("Nuevo", "AsignarMateriales", FormMethod.Post, new { id = "NuevoAsignaMaterialesMForm", name = "NuevoAsignaMaterialesMForm", @class = "form-horizontal" }))
            {
                <div class="form-group">
                    <div class="col-sm-2"> <label class="control-label">Origen</label></div>
                    <div class="col-sm-5">
                       
                        <select id="idOrigen" name="idOrigen" class="form-control" required="required"></select>
                    </div>
                </div>
                
             

                <div class="form-group">
                    <div class="col-sm-2"> <label class="control-label">Material</label></div>
                    <div class="col-sm-2">
                        <div class="input-group">
                            <input type="text" id="idMaterial" name="idMaterial" class="form-control" placeholder="Id" title="Id" disabled>
                            <span class="input-group-btn">
                                <button class="btn btn-secondary" type="button" id="btnBuscarMat" name="btnBuscarMat"><span class="fa fa-search"></span></button>
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-5">
                        <input type="text" id="NombreMat" placeholder="Material" class="form-control" title="NombreMaterial" disabled>
                    </div>
                 </div>
                <div class="form-group">
                    <div class="col-sm-2"> <label class="control-label">UM</label></div>
                    <div class="col-sm-3">
                        <select id="Unidad" name="Unidad" class="form-control" required="required"></select>
                    </div>

                </div>



                @Html.HiddenFor(model => model.id)
                @Html.HiddenFor(model => model.usuarioCreacion)
                @Html.HiddenFor(model => model.idAlmacen)
                @Html.HiddenFor(model => model.idEtapa)
                @Html.HiddenFor(model => model.idProyecto)
                @Html.HiddenFor(model => model.idMaterialSelect)
                @Html.HiddenFor(model => model.Revision)
            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            <button type="button" class="btn btn-primary btn-GuardaNuevoM">Guardar</button>
        </div>
    </div><!-- /.modal-content -->
</div>
