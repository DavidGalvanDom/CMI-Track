@model CMI.Track.Web.Models.AsignaProyecto

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close btn-Cerrar" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Asignar Materiales</h4>
        </div>
        <div class="modal-body ativa-scroll">
            <div class="clientAlertDlg"></div>
            @using (Html.BeginForm("Actualizar", "AsignarMateriales", FormMethod.Post, new { id = "NuevoAsignaMaterialesForm", name = "NuevoAsignaMaterialesForm", @class = "form-horizontal" }))
            {
                <div class="form-group">
                    <div class="col-sm-2"> <label class="control-label">Folio</label></div>
                    <div class="col-sm-2">
                        <span id="idFolio" placeholder="Folio" class="form-control" title="idFolio">Folio</span>
                        @Html.HiddenFor(model => model.idAsignaProyecto)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2"> <label class="control-label">Requisición</label></div>
                    <div class="col-sm-2">
                        <div class="input-group">
                            <p id="idRequisicion" name="idRequisicion" class="form-control" placeholder="Requisicion" title="Requisicion">Requisicion</p>
                            <span class="input-group-btn">
                                <button class="btn btn-secondary" type="button" id="btnBuscarRequisicion" name="btnBuscarRequisicion">
                                    <span class="fa fa-search"></span>
                                </button>
                            </span>
                        </div>
                        <input type="hidden" id="idRequisicionSelect" name="idRequisicionSelect" />
                    </div>
                    <div class="col-sm-5">
                        <span id="OrigenReq" placeholder="OrigenReq" class="form-control" title="OrigenReq" disabled="disabled">Origen</span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2"> <label class="control-label">Material</label></div>
                    <div class="col-sm-2">
                        <div class="input-group">
                            <p id="idMaterial" name="idMaterial" class="form-control" placeholder="Id" title="Id">IdMaterial</p>
                            <span class="input-group-btn">
                                <button class="btn btn-secondary" type="button" id="btnBuscarMat" name="btnBuscarMat">
                                    <span class="fa fa-search"></span>
                                </button>
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-5">
                        <span id="NombreMat" placeholder="Material" class="form-control" title="NombreMaterial" disabled="disabled"> Material </span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2"> <label class="control-label">UM</label></div>
                    <div class="col-sm-4">
                        <select id="Unidad" name="Unidad" class="form-control" required="required"></select>
                    </div>
                    <div class="col-sm-6">
                        <button type="button" class="btn btn-primary btn-AgregarMaterial">Agregar</button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <br />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-12">
                        <div id="bbGrid-MaterialesAsignadosM" class="col-lg-12">
                            <div id="cargandoInfo" style="display:none;">Cargando informacion...</div>
                        </div>
                    </div>
                </div>

                @Html.HiddenFor(model => model.usuarioCreacion)
                @Html.HiddenFor(model => model.idAlmacen)
                @Html.HiddenFor(model => model.idEtapa)
                @Html.HiddenFor(model => model.idProyecto)
                @Html.HiddenFor(model => model.idReq)
                @Html.HiddenFor(model => model.Revision)
                @Html.HiddenFor(model => model.id)
                @Html.HiddenFor(model => model.idMaterialSelect)
            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default btn-Cerrar" data-dismiss="modal">Cerrar</button>
        </div>
    </div><!-- /.modal-content -->
</div>



