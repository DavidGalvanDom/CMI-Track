<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="~/Content/images/favicon.ico">
    <title>@ViewBag.Title - CMI Track </title>
    @Styles.Render("~/Content/css")
    @Html.Partial("_html5shiv")    
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("CMI Track", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <!-- /.navbar-header -->

            <ul class="nav navbar-top-links navbar-right">
                <!-- /.dropdown -->
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="#"><i class="fa fa-user fa-fw"></i> Informacion del Usuario</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="~/Autentificacion/LogOut"><i class="fa fa-sign-out fa-fw"></i> Salir </a>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>
            <!-- /.navbar-top-links -->

            <div id="divSideBar">
                <div class="navbar-default sidebar" role="navigation">
                    <div class="sidebar-nav navbar-collapse">
                        <div class="CargandoInfo">
                            Cargando menu...
                        </div>                       
                    </div>
                </div>
            </div>

                    <!-- /.navbar-static-side -->
        </nav>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                    <div class="clientAlert"></div>
                </div>
                <div class="col-lg-1"></div>
            </div>

            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/general")
    <script type="text/javascript">
        $(function () {
            //Asigna el conteto de la aplicacion
            contextPath = '@Url.Content("~")';
            CMI.inicial();
        });
    </script>
    @RenderSection("scripts", required: false)
</body>

</html>
