@model CMI.Track.Web.Models.SubMarcas

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Actualizar SubMarca</h4>
        </div>
        <div class="modal-body">
            <div class="clientAlertDlg"></div>
            @using (Html.BeginForm("Actualiza", "SubMarcas", FormMethod.Post, new { id = "ActualizaSubMarcaForm", name = "ActualizaSubMarcaForm", @class = "form-horizontal", onsubmit = "return false" }))
            {
                <div class="form-group">
                    <label class="col-sm-2 control-label">Id</label>
                    <div class="col-sm-2">
                        <p class="form-control">@Html.DisplayFor(model => model.id)</p>
                    </div>                   
                    @Html.LabelFor(model => model.fechaCreacion, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-3">
                        <div class='input-group date'>
                            @Html.TextBoxFor(model => model.fechaCreacion, new { @class = "form-control", maxlength = 10, @disabled = "disabled" })
                            <span class="input-group-addon">
                                <span class="fa fa-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-3">  </div>
                </div>
            <div class="form-group">
                @Html.LabelFor(model => model.codigoSubMarca, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-2">
                    @Html.TextBoxFor(model => model.codigoSubMarca, new { @class = "form-control", maxlength = 20 })
                </div>
                @Html.LabelFor(model => model.perfilSubMarca, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-6">
                    @Html.TextBoxFor(model => model.perfilSubMarca, new { @class = "form-control", maxlength = 50 })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.idEstatus, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-2">
                    @Html.DropDownListFor(model => model.idEstatus,
                                                                                            new SelectList(new[]{
                                                                                                            new SelectListItem{ Text="ACTIVO", Value="1"},
                                                                                                            new SelectListItem{ Text="INACTIVO", Value="0"}},
                                                                                "Value", "Text"), new { @class = "form-control", required = "required" })
                </div>

                @Html.LabelFor(model => model.claseSubMarca, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-3">
                    @Html.DropDownListFor(model => model.claseSubMarca,
                                                                                            new SelectList(new[]{
                                                                                                            new SelectListItem{ Text="PANTOGRAFO", Value="P"},
                                                                                                            new SelectListItem{ Text="CORTE", Value="C"}},
                                                                                "Value", "Text"), new { @class = "form-control", required = "required" })
                </div>
                <div class="col-sm-3"></div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.piezasSubMarcas, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-2">
                    @Html.TextBoxFor(model => model.piezasSubMarcas, new { @class = "form-control", maxlength = 15 })
                </div>
                @Html.LabelFor(model => model.corteSubMarcas, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-2">
                    @Html.TextBoxFor(model => model.corteSubMarcas, new { @class = "form-control", maxlength = 15 })
                </div>
                @Html.LabelFor(model => model.longitudSubMarcas, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-2">
                    @Html.TextBoxFor(model => model.longitudSubMarcas, new { @class = "form-control", maxlength = 15 })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.anchoSubMarcas, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-2">
                    @Html.TextBoxFor(model => model.anchoSubMarcas, new { @class = "form-control", maxlength = 15 })
                </div>
                @Html.LabelFor(model => model.gradoSubMarcas, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-2">
                    @Html.TextBoxFor(model => model.gradoSubMarcas, new { @class = "form-control", maxlength = 15 })
                </div>
                @Html.LabelFor(model => model.kgmSubMarcas, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-2">
                    @Html.TextBoxFor(model => model.kgmSubMarcas, new { @class = "form-control", maxlength = 15 })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.totalLASubMarcas, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-2">
                    @Html.TextBoxFor(model => model.totalLASubMarcas, new { @class = "form-control", maxlength = 15 })
                </div>
                @Html.LabelFor(model => model.totalSubMarcas, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-2">
                    @Html.TextBoxFor(model => model.totalSubMarcas, new { @class = "form-control", maxlength = 15 })
                </div>
                @Html.LabelFor(model => model.pesoSubMarcas, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-2">
                    @Html.TextBoxFor(model => model.pesoSubMarcas, new { @class = "form-control", maxlength = 15 })
                </div>
            </div>


            @Html.HiddenFor(model => model.id)
            @Html.HiddenFor(model => model.idMarca)
            @Html.HiddenFor(model => model.idOrdenProduccion)
            @Html.HiddenFor(model => model.usuarioCreacion)
            }                    
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            <button type="button" class="btn btn-primary btn-ActualizarSubMarca">Actualizar</button>
        </div>
    </div><!-- /.modal-content -->
</div>
