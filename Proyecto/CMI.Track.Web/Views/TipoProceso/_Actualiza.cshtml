@model CMI.Track.Web.Models.TipoProceso

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Actualizar Tipo de Proceso</h4>
        </div>
        <div class="modal-body">
            <div class="clientAlertDlg"> </div>
            @using (Html.BeginForm("Actualiza", "TipoProceso", FormMethod.Post, new { id = "ActualizaTipoProcesoForm", name = "ActualizaTipoProcesoForm", @class = "form-horizontal" }))
            {

            <div class="form-group">
                <label class="col-sm-3 control-label">Id</label>
                <div class="col-sm-8">
                    <p class="form-control-static">@Html.DisplayFor(model => model.id)</p>                   
                </div>
                <div class="col-sm-1">
                    @Html.HiddenFor(model => model.id)
                </div>
            </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NombreTipoProceso, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.NombreTipoProceso, new { @class = "form-control", maxlength = 100 })
                    </div>
                    <div class="col-sm-1">
                        @Html.ValidationMessageFor(model => model.NombreTipoProceso, null, new { @class = "help-inline" })
                    </div>                 
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Estatus, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-8">
                        @Html.DropDownListFor(model => model.Estatus,
                                                                    new SelectList(new[]{
                                                                                  new SelectListItem{ Text="ACTIVO", Value="1"},
                                                                                  new SelectListItem{ Text="INACTIVO", Value="0"}},
                                                           "Value", "Text"), new { @class = "form-control" })
                    </div>
                    <div class="col-sm-1">
                        @Html.ValidationMessageFor(model => model.Estatus, null, new { @class = "help-inline" })
                    </div>
                </div>


            @Html.HiddenFor(model => model.Estatus);
            @Html.HiddenFor(model => model.usuarioCreacion)
            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default " data-dismiss="modal">Cancelar</button>
            <button type="button" class="btn btn-primary btn-ActualizarTipoProceso">Guardar</button>
        </div>
    </div>
</div>
