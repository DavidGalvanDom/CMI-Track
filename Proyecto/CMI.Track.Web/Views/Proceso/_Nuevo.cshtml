@model CMI.Track.Web.Models.Proceso

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">@ViewBag.Titulo   Proceso</h4>
        </div>
        <div class="modal-body">
            <div class="clientAlertDlg"></div>
            @using (Html.BeginForm("Nuevo", "Proceso", FormMethod.Post, new { id = "NuevoProcesoForm", name = "NuevoProcesoForm", @class = "form-horizontal", onsubmit = "return false" }))
            {               

                <div class="form-group">
                    @Html.LabelFor(model => model.nombreProceso, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.nombreProceso, new { @class = "form-control", maxlength = 20 })
                    </div>
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.idTipoProceso, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-8">
                        <select id="idTipoProceso" name="idTipoProceso" class="form-control" required="required"></select>
                    </div>
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.idEstatus, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-8">
                        @Html.DropDownListFor(model => model.idEstatus,
                                                                                new SelectList(new[]{
                                                                                              new SelectListItem{ Text="ACTIVO", Value="1"},
                                                                                              new SelectListItem{ Text="INACTIVO", Value="0"}},
                                                                    "Value", "Text"), new { @class = "form-control", required = "required" })
                    </div>
                </div>

                
                @Html.HiddenFor(model => model.usuarioCreacion)
                <input type="hidden" id="tipoproceso" name="tipoproceso" value="" />
            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            <button type="button" class="btn btn-primary btn-GuardaNuevo">Guardar</button>
        </div>
    </div><!-- /.modal-content -->
</div>



