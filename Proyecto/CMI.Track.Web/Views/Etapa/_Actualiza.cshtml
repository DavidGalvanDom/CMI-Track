@model CMI.Track.Web.Models.Etapa

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Actualiza Etapa</h4>
        </div>
        <div class="modal-body">
            <div class="clientAlertDlg"></div>
            @using (Html.BeginForm("Actualiza", "Etapa", FormMethod.Post, new { id = "ActualizaEtapaForm", name = "ActualizaEtapaForm", @class = "form-horizontal" }))
            {                
                <div class="form-group">
                    @Html.LabelFor(model => model.nombreEtapa, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.nombreEtapa, new { @class = "form-control", maxlength = 20 })
                    </div>
                    <label class="col-sm-1 control-label">Id</label>
                    <div class="col-sm-2">
                        <p class="form-control">@Html.DisplayFor(model => model.id)</p>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.fechaInicio, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-3">
                        <div class='input-group date' id='dtpFechaInicio'>
                            @Html.TextBoxFor(model => model.fechaInicio, new { @class = "form-control", maxlength = 10 })
                            <span class="input-group-addon">
                                <span class="fa fa-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-2">
                    </div>
                    @Html.LabelFor(model => model.fechaFin, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-3">
                        <div class='input-group date' id='dtpFechaFin'>
                            @Html.TextBoxFor(model => model.fechaFin, new { @class = "form-control", maxlength = 10 })
                            <span class="input-group-addon">
                                <span class="fa fa-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.estatusEtapa, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-3">
                        @Html.DropDownListFor(model => model.estatusEtapa,
                                                                    new SelectList(new[]{
                                                                                  new SelectListItem{ Text="ABIERTO", Value="10"},
                                                                                  new SelectListItem{ Text="CERRADO", Value="11"}},
                                                        "Value", "Text"), new { @class = "form-control", required = "required" })
                    </div>
                    <div class="col-sm-2">   </div>
                    @Html.LabelFor(model => model.fechaCreacion, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-3">
                        <div class='input-group date'>
                            @Html.TextBoxFor(model => model.fechaCreacion, new { @class = "form-control", maxlength = 10 })
                            <span class="input-group-addon">
                                <span class="fa fa-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.infoGeneral, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextAreaFor(model => model.infoGeneral, new
                    {
                        @class = "form-control",
                        maxlength = 250,
                        onkeypress = "return ( this.value.length < 250 );",
                        rows = "4"
                    })
                    </div>
                </div>

                @Html.HiddenFor(model => model.id)
                @Html.HiddenFor(model => model.idProyecto)
                @Html.HiddenFor(model => model.revisionProyecto)
                @Html.HiddenFor(model => model.usuarioCreacion)
            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            <button type="button" class="btn btn-primary btn-ActualizarEtapa">Actulizar</button>
        </div>
    </div><!-- /.modal-content -->
</div>

