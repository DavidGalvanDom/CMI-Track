@{
    ViewBag.Title = "Etapas";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            <small>Lista</small> Etapas
            <button class="btn btn-outline btn-primary pull-right btnNuevo" style="display: none;">Nueva</button>
        </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="form-group">
        <div class="col-sm-4">
            <div class="input-group">
                <p id="nombreProyecto" name="nombreProyecto" class="form-control" placeholder="Nombre Proyecto"> </p>
                <span class="input-group-btn">
                    <button class="btn btn-secondary" type="button" id="btnBuscarProyecto" name="btnBuscarProyecto"><span class="fa fa-search"></span></button>
                </span>
            </div>
            <input type="hidden" id="idProyecto" name="idProyecto"  />
        </div>
        <div class="col-sm-2">
            <span id="Revision" name="Revision"  class="form-control"></span>
        </div>
        <div class="col-sm-2">
            <span id="CodigoProyecto" placeholder="CodigoProyecto" class="form-control"></span>
        </div>
        <div class="col-sm-2">
            <span id="FechaInicio" placeholder="FechaInicio" class="form-control"></span>
        </div>
        <div class="col-sm-2">
            <span id="FechaFin" placeholder="FechaFin" class="form-control"></span>
        </div>
    </div>    
</div>

<div class="modal fade bs-example-modal-lg" id="buscar-Proyecto"
     tabindex="-1" role="dialog"
     aria-labelledby="buscarProyecto">
</div>


@section Scripts {
    <script src="~/Scripts/Etapa.js"></script>
}
